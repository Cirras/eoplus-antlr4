Main
{
	questname 	"expressions"
	version		1.0
}

state RuleExpressions
{
	desc		"Test action expressions in rules."

	rule		GotItems(123) ShowHint("Player has item 123.")
}

state ActionGoto
{
	desc		"Test goto usage in action expressions."

	action		goto Foo
}

state GuardExpressionGoto
{
	desc		"Test silly goto usages in guard expressions."

	rule		goto Foo
				ShowHint("Foo")

	if			goto Bar
				ShowHint("Bar")
	elseif		goto Baz
				ShowHint("Baz")
	elif		goto Flarp
				ShowHint("Flarp")
}